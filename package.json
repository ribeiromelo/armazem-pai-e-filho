{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=armazem-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy --project-name armazem-pai-filho",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply armazem-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply armazem-production",
    "db:seed": "wrangler d1 execute armazem-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute armazem-production --local",
    "db:console:prod": "wrangler d1 execute armazem-production"
  },
  "dependencies": {
    "@hono/vite-cloudflare-pages": "^0.4.3",
    "cors": "^2.8.5",
    "hono": "^4.10.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
